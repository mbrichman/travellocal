<div class="row-fluid">
  <div class="span8 primary">

    <h3>
      <%= @place.name.titleize %>
      <% if signed_in? && current_user == User.find(14) %>
        <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-info' %>
        <%= link_to 'Delete', place_path(@place), class: 'btn btn-danger', method: 'delete', confirm: 'Are you sure?' %>
      <% end %>
    </h3>
    <div class="row-fluid">
      <div class="span6">
        <div>
          <%= image_tag @place.photo.url(:medium) %><br>
          <div >
            <span class="label"> <i class="icon-certificate icon-white"></i>&nbsp;Local Favorite</span>
            <span class="label"> <%= friends_fave.count %> friends love this place</span>
          </div>

        </div>
        <% if signed_in? %>
        <div class="actions-btns">
            <%= link_to "Favorite", favorites_path(place_id: @place.id), method: 'post', class: 'btn' %>
            <%= link_to 'Add to Trip', add_to_trip_path(place_id: @place.id, city_id: @place.city_id), method: 'post', class: 'btn btn-primary' %>
          </div>
          <% end %>
        <div>
        <h4>Description:</h4>
        <%= @place.try(:description) %>

        </div>

      </div>
      <div class="span6">
        <div>
          <p>Category: <%= @place.category.try(:name).try(:titleize) %></p>
          <p><%= @place.address.try(:titleize) %></p>
          <p><%= @place.city.name %></p>
          <p><%= link_to @place.url, @place.url %></p>
          <p>Neighborhood: <%= @place.neighborhood.try(:titleize) %></p>

        </div>
       <h4>
            Reviews
            <% if signed_in? %>
            <%= link_to 'Add a Review', new_review_path, class: 'btn btn-primary' %>
            <% end %>
          </h4>
          <ul>
            <% @place.reviews.each do |review| %>
            <li>
              <% if review.user.city == review.place.city %>
                <%= link_to raw("<i class=\"icon-map-marker\"></i>"), '#', method: 'post', class: 'add-trip', :"data-toggle" => "tooltip", title: 'Local Reviewer' %>
              <% else %>
                <%= link_to raw("<i class=\"icon-road\"></i>"), '#', method: 'post', class: 'add-trip', :"data-toggle" => "tooltip", title: 'Local Reviewer' %>
              <% end %>
              <%= link_to review.user.name.try(:titleize), user_path(review.user) %> said:<br> <%= review.review_text %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
