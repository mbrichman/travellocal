<div class="row-fluid">

  <aside class="span3">
    <section>
      <% if signed_in? %>
        <div>
          <h3>Previous Trips</h3>
          <ul class="items">
            <% current_user.trips.each do |trip| %>
              <li><time><%= trip.start_date %></time><p><%= link_to trip.name, trip %></p></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span9 primary row-fluid">
      <% if notice %>
        <div><%= notice %></div>
      <% end %>
      <% if @favorite %>
        <% @favorite.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <% end %>
      <% end %>
      <% if @wishlist %>
        <% @wishlist.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <% end %>
      <% end %>
