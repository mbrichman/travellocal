<h1>Listing places</h1>

<table class="table table-hover">
  <tr>
    <th>City</th>
    <th>Name</th>
    <th>Address</th>
    <th>Url</th>
    <th>Neighborhood</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.city_id %></td>
    <td><%= fancy_cap(place.name) %></td>
    <td><%= place.address %></td>
    <td><%= place.url %></td>
    <td><%= fancy_cap(place.neighborhood) %></td>
    <% if signed_in? %>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
    <%= link_to 'New Place', new_place_path, class: 'btn' %>

