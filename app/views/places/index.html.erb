<h1>Listing places</h1>

<table class="table table-hover">
  <tr>
    <th>City</th>
    <th>Name</th>
    <th>Address</th>
    <th>Url</th>
    <th>Neighborhood</th>
    <th></th>

  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.city.name %></td>
    <td><%= link_to fancy_cap(place.name), place %></td>
    <td><%= place.address %></td>
    <td><%= place.url %></td>
    <td><%= fancy_cap(place.neighborhood) %></td>
    <% if signed_in? %>
    <% if current_user.has_trip_to_city(place.city_id) %>
        <td><%= link_to 'Add to Trip', add_to_trip_path(place_id: place.id, city_id: place.city_id), method: 'post' %></td>
    <% else %>
        <td></td>
    <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<br />
    <%= link_to 'New Place', new_place_path, class: 'btn' %>

