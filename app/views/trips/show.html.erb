<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>
<p>
  <b>City:</b>
  <%= @trip.city.name %>
</p>
<p>
  <b>Start date:</b>
  <%= @trip.start_date %>
</p>

<p>
  <b>End date:</b>
  <%= @trip.end_date %>
</p>
<h3>Places</h3>
<ul>
<% @trip.trip_places.each do |place| %>
  <li><%= place.place.name.titleize %> <%= link_to raw("<i class=\"icon-remove\"></i>"), remove_from_trip_path(place), method: 'delete' %></li>
<% end %>
</ul>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
