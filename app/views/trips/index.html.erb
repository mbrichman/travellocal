<h2>Upcoming Trips</h2>
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
<table class="table">
  <tr>
    <th>Place</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= City.(trip.city_id) %></td>
    <td><%= trip.start_date %></td>
    <td><%= trip.end_date %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trip', trips_path, class: 'btn btn-success', method: 'post' %>
