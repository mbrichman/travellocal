<!DOCTYPE html>
<html>
<head>
  <title>Travellocal</title>
  <%= stylesheet_link_tag    "style", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="page">
  <header id="header">

    <div class="row-fluid">
      
      <section class="span3 branding">
        <h1 class="site-name">Travel Local</h1>
      </section>

      <section class="span6 social">
        <div class="social-icons"></div>
        <div class="social-feeds">
          <ul class="items">
            <li class="item">Social feeds</li>
            <li class="item">Social feeds</li>
          </ul>
        </div>
      </section>

      <section class="span3 conntect">
        <div class="login-form">
          <input type="text" placeholder="Email Address" />
          <input type="password" placeholder="Password" />
          <!-- <input type="submit" value="Login" class="btn" /> -->
          <a href="/index-loggedin.html" class="btn">Login</a>
        </div>

        <section class="action">
          <a href="#" title="Create a Profile">Create a Profile</a>
        </section>
      </section>
    </div>

    <div class="row-fluid">
      <section class="span3 drop-down">
        <select>
          <option value="chicago">Chicago</option>
          <option value="chicago">Chicago</option>
          <option value="chicago">Chicago</option>
          <option value="chicago">Chicago</option>
          <option value="chicago">Chicago</option>
        </select>
      </section>
      <section class="span9 nav nav-6">
        <a href="#">Restaurants</a>
        <a href="#">Events</a>
        <a href="#">Nightlife</a>
        <a href="#">Attractions</a>
        <a href="#">Activities</a>
        <a href="#">Shopping</a>
      </section>
    </div>
  </header>
  <div id="main">

  <%= yield %>

  </div>
    <footer id="footer">
      <div class="row-fluid">
        <section class="span6 social-feed">
          <ul class="items">
            <li class="item">Twitter Social Feed</li>
          </ul>
        </section>
        <section class="span6 social-feed">
          <ul class="items">
            <li class="item">Facebook Live Social Feed</li>
          </ul>
        </section>
      </div>
      <div class="colophon">
        <p>&copy; Copyright 2013 Travel Local.</p>
      </div>
    </footer>
  </div>
</body>
</html>
