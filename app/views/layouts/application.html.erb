<!DOCTYPE html>
<html>
<head>
  <title>Travellocal</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand span2" href="/">Travel Local</a>
        <div class="nav-collapse">

          <ul class="nav pull-right">
            <% if signed_in? %>
            <li><%= link_to 'Users', users_url %></li>
            <li><%= link_to 'Reviews', reviews_url %></li>
            <li><%= link_to 'Cities', cities_url %></li>
            <li><%= link_to 'Places', places_url %></li>
        <%= form_tag places_path,class: 'navbar-search pull-left' , method: 'get' do %>
        <%= text_field_tag :search, nil, class: "search-query span3", placeholder: 'Search Places by Neighborhood' %>
        <% end %>
            <li><%= link_to 'Log Out', sessions_destroy_url %></li>
            <li><%= link_to current_user.name.capitalize, current_user %></li>

      <% else %>
        <li><%= link_to 'Log In', sessions_new_url %></li>
        <li><%= link_to 'Sign Up', new_user_url %></li>
                <%= form_tag '/search',class: 'navbar-search pull-left' , method: 'get' do %>
        <%= text_field_tag :search, nil, class: "search-query span3", placeholder: 'Search Places' %>
        <% end %>
      <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

</head>
<body>

<%= yield %>

</body>
</html>
