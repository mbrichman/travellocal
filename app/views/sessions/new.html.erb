
<% if notice.present? %>
<div class="notice">
<%= notice %>
</div>
<% end %>
<fieldset><div>
  <legend>Sign in to TravelLocal</legend>
  <%= form_tag sessions_create_url, class: "form-horizontal" do %>

  <div class="control-group">
    <%= label_tag :email, 'Email',class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :email %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password, 'Password',class: "control-label" %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <%= submit_tag 'Login' %>

  <% end %>


</div></fieldset>
