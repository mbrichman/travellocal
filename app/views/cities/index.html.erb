<h1>Listing cities</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= fancy_cap(city.name) %></td>
    <% if signed_in?  %>
      <td><%= link_to 'Show', city, class: 'btn btn-success' %></td>
      <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

  <%= link_to 'New City', new_city_path, class: 'btn' %>
